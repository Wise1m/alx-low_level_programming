#include <stdio.h>

/**
 * main - Creates a file containing the password for the crackme2 executable.
 *
 * Return: Always 0.
 */
int main(void)
{
    char password[] = "mySup3rS3cr3tP@ssw0rd"; // Define the password string.
    FILE *file_ptr; // Declare a file pointer.

    file_ptr = fopen("password.txt", "w"); // Open the password file for writing.
    if (file_ptr == NULL) { // Check if the file was successfully opened.
        perror("Error opening file."); // Print an error message.
        return 1; // Return with an error code.
    }
    fprintf(file_ptr, "%s", password); // Write the password to the file.
    fclose(file_ptr); // Close the file.

    return 0; // Return with a success code.
}

